%article.project__row
  .project__item
    = link_to "#{name}/" do
      = image_tag project.image_thumb, class: "project__image"
  .project__info
    %h1.project__title
      = link_to "#{name}/", class: "project__link" do
        = project.title
    %h2.project__description
      = project.description
    - if !project.text.nil?
      %p.project__preview
        = project.text[0]
    - if !project.category.nil?
      .project__category
        %ul.category__list
          - project.each do |key, value|
            - if key == "strategy" || key == "domain" || key == "category"
              - if !value.nil?
                - value.each do |tag|
                  %li.category__item
                    = link_to "categories/#{tag.parameterize}/", class: "category__link" do
                      = tag
